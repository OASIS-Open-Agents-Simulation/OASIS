---
// DemoSection.astro
export interface Props {
  title?: string;
  description?: string;
  points?: string[];
}

const { title = "Demo", description, points = [] } = Astro.props;
---

<section class="text-center px-4 py-8">
  <h2 class="text-2xl font-bold mb-4">{title}</h2>
  {description && <p class="text-lg text-gray-700 mb-4">{description}</p>}
  
  <ul class="list-disc list-inside text-left max-w-3xl mx-auto text-gray-600">
    {points.map((point) => (
      <li class="mb-2">{point}</li>
    ))}
  </ul>
</section>
