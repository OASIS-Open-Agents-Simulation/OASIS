---
export interface Props {
  imageSrc: string;
  modules: { title: string; description: string }[];
}

const { imageSrc, modules } = Astro.props;
---

<section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 my-8">
  <!-- 图片展示区域 -->
  <div class="flex justify-center mb-8">
    <div class="w-full  max-h-[30vh]">
      <img src={imageSrc} alt="Structure" class="rounded-lg shadow-lg w-full h-full object-contain" />
    </div>
  </div>

  <!-- 信息展示区域 -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
    {modules.map((module) => (
      <div class="bg-white rounded-lg shadow-md p-6 text-center border border-gray-200">
        <h3 class="text-xl font-bold text-gray-800 mb-4">{module.title}</h3>
        <p class="text-gray-600">{module.description}</p>
      </div>
    ))}
  </div>
</section>
